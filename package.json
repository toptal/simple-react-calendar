{
  "name": "simple-react-calendar",
  "description": "A simple calendar component for React based applications.",
  "main": "lib/index.js",
  "version": "0.1.0",
  "private": true,
  "repository": "toptal/simple-react-calendar",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-espower": "^1.0.0",
    "classnames": "^2.1.3",
    "date-fns": "0.17.0",
    "eslint": "^1.4.3",
    "eslint-config-toptal": "^0.1.0",
    "eslint-plugin-react": "^3.4.1",
    "json-loader": "^0.5.3",
    "karma": "^0.13.10",
    "karma-browserstack-launcher": "^0.1.5",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs2-launcher": "^0.3.2",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.2",
    "power-assert": "^1.0.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "sinon": "^1.17.1",
    "webpack": "^1.12.2",
    "webpack-dev-middleware": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "scripts": {
    "build": "webpack",
    "build-lib": "babel ./src --out-dir ./lib && rm -rf ./lib/calendar/__specs__",
    "build-tests": "env NODE_ENV=test BUILD_TESTS=true npm run build",
    "start": "npm run build -- --watch",
    "test": "karma start",
    "test-ci": "npm test -- --single-run",
    "test-cross-browser": "env TEST_BROWSERSTACK=true npm run test-ci",
    "test-tz": "npm run build-tests && ./scripts/test_tz.sh",
    "lint": "eslint src/ --ext .js,.jsx",
    "prepublish": "npm run build && npm run build-lib"
  }
}
