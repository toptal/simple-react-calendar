{
  "name": "simple-react-calendar",
  "description": "A simple calendar component for React based applications.",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toptal/simple-react-calendar.git"
  },
  "version": "1.7.0",
  "scripts": {
    "build": "env NODE_ENV=production webpack --mode development",
    "build-lib": "babel ./src --out-dir ./lib --ignore ./src/calendar/__specs__",
    "prepublish": "npm run build-lib",
    "clean": "rm -rf ./lib",
    "start": "webpack --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.jsx",
    "format:js": "prettier \"+(src)/**/*.+(js*)\" --write",
    "format:md": "prettier \"*.+(md)\" --write",
    "precommit": "lint-staged"
  },
  "bugs": {
    "url": "https://github.com/toptal/simple-react-calendar/issues"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "date-fns": "^1.27.2",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "eslint": "2.7.0",
    "eslint-plugin-react": "^4.3.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jest-context": "^2.1.0",
    "lint-staged": "^6.0.0",
    "mockdate": "^2.0.2",
    "prettier": "^1.9.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-prop-types": "^0.4.0",
    "react-test-renderer": "^16.1.0",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-middleware": "^3.0.0"
  },
  "peerDependencies": {
    "classnames": ">= 2 < 3",
    "date-fns": ">= 1 < 2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "*.{js*,md,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "codecov": "^3.0.0"
  },
  "keywords": [
    "react",
    "reactjs",
    "simple",
    "calendar"
  ]
}
