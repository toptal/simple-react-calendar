{
  "name": "simple-react-calendar",
  "description": "A simple calendar component for React based applications.",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toptal/simple-react-calendar.git"
  },
  "version": "1.7.0",
  "scripts": {
    "build": "env NODE_ENV=production webpack",
    "build-lib": "babel ./src --out-dir ./lib --ignore ./src/calendar/__specs__",
    "build-tests": "env NODE_ENV=test BUILD_TESTS=true webpack",
    "prepublish": "npm run build-lib",
    "clean": "rm -rf ./lib",
    "start": "webpack --watch",
    "test": "karma start",
    "test-ci": "npm test -- --single-run",
    "test-bs": "env TEST_BROWSERSTACK=true npm run test-ci",
    "test-tz": "npm run build-tests && ./scripts/test_tz.sh",
    "lint": "eslint src/ --ext .js,.jsx",
    "format:js": "prettier \"+(src)/**/*.+(js*)\" --write",
    "format:md": "prettier \"*.+(md)\" --write",
    "precommit": "lint-staged"
  },
  "bugs": {
    "url": "https://github.com/toptal/simple-react-calendar/issues"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "classnames": "^2.2.5",
    "date-fns": "^1.27.2",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "eslint": "2.7.0",
    "eslint-plugin-react": "^4.3.0",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-browserstack-launcher": "^0.1.11",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lint-staged": "^6.0.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7",
    "power-assert": "^1.3.1",
    "prettier": "^1.9.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-prop-types": "^0.4.0",
    "sinon": "^1.17.3",
    "webpack": "^1.12.15",
    "webpack-dev-middleware": "^1.6.1"
  },
  "peerDependencies": {
    "classnames": ">= 2 < 3",
    "date-fns": ">= 1 < 2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "src/**/*.js*": ["prettier --write", "git add"],
    "*.md": ["prettier --write", "git add"]
  }
}
