{
  "name": "simple-react-calendar",
  "description": "A simple calendar component for React based applications.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toptal/simple-react-calendar.git"
  },
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "classnames": "^2.2.3",
    "date-fns": "1.0.0-rc19",
    "eslint": "^2.2.0",
    "eslint-config-toptal": "^0.2.0",
    "eslint-plugin-react": "^4.1.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.21",
    "karma-browserstack-launcher": "^0.1.10",
    "karma-chrome-launcher": "^0.2.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^1.2.1",
    "karma-phantomjs2-launcher": "^0.5.0",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "power-assert": "^1.2.0",
    "sinon": "^1.17.3",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.5.1"
  },
  "scripts": {
    "build": "env NODE_ENV=production webpack",
    "build-lib": "babel ./src --out-dir ./lib --ignore ./src/calendar/__specs__",
    "build-tests": "env NODE_ENV=test BUILD_TESTS=true webpack",
    "prepublish": "npm run build-lib",
    "clean": "rm -rf ./lib",
    "start": "webpack -- --watch",
    "test": "karma start",
    "test-ci": "npm test -- --single-run",
    "test-cross-browser": "env TEST_BROWSERSTACK=true npm run test-ci",
    "test-tz": "npm run build-tests && ./scripts/test_tz.sh",
    "lint": "eslint src/ --ext .js,.jsx"
  },
  "peerDependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  }
}
